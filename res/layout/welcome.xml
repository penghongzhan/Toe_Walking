<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#B0C4DE"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
            >
    <ImageView
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:id="@+id/title_pic"

         />
    <ImageView
         android:layout_width="fill_parent"
         android:layout_height="120dp"
         android:id="@+id/welcome_pic"
         android:layout_below="@id/title_pic"
          />

     <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/info_name_input"
         android:text="姓名："
         android:textSize="10pt"
         android:layout_below="@id/welcome_pic"
         android:textColor="#000000"
         />
    <EditText
        android:id="@+id/info_name_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_toRightOf="@id/info_name_input"
        android:layout_alignTop="@id/info_name_input"
        />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/info_age_input"
         android:text="生日："
         android:textSize="10pt"
         android:layout_below="@id/info_name_input"

         android:layout_alignTop="@id/info_age_edit"
         android:textColor="#000000"/>
    <EditText
        android:id="@+id/info_age_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/info_name_edit"
        android:layout_alignLeft="@id/info_name_edit"
        android:layout_marginTop="2dip"
        />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/info_sex_input"
         android:text="性别："
         android:textSize="10pt"
         android:layout_below="@id/info_age_input"

         android:layout_alignTop="@id/info_sex_edit"
         android:textColor="#000000"/>
    <EditText
        android:id="@+id/info_sex_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/info_age_edit"
        android:layout_alignLeft="@id/info_age_edit"
        android:layout_marginTop="2dip"
        />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/info_value_input"
         android:text="阈值："
         android:textSize="10pt"
         android:layout_below="@id/info_sex_input"
         android:layout_alignTop="@id/info_value_edit"
         android:textColor="#000000"
         android:visibility="gone"/>
    <EditText
        android:id="@+id/info_value_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_below="@id/info_sex_edit"
        android:layout_alignLeft="@id/info_sex_edit"
        android:layout_marginTop="2dip"
        android:digits="1234567890"
        android:visibility="gone"
        />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:id="@+id/history"
         android:text="历史记录："
         android:textSize="10pt"
         android:layout_below="@id/info_value_edit"
         android:layout_marginTop="10sp"
         android:textColor="#000000"
         />
    <ListView android:id="@+id/history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stackFromBottom="true"
            android:layout_below="@id/history"
            android:layout_alignLeft="@id/history"
            android:textColor="#000000">
        </ListView>

      <Button
            android:id="@+id/start"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/start_test"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button01"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
      />
        
    </RelativeLayout>

</LinearLayout>
